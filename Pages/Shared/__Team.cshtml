                            <a class="btn btn-lg btn-primary btn-lg-square rounded" href=@SocialEnum.INSTA_MATHEUS target="_blank"><i class="fab fa-instagram fw-normal"></i></a>
                            <a class="btn btn-lg btn-primary btn-lg-square rounded" href=@SocialEnum.LINKEDIN_MATHEUS target="_blank"><i class="fab fa-linkedin-in fw-normal"></i></a>
